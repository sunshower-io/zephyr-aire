{
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "module": "esNext",
    "target": "es2017",
    "moduleResolution": "node",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types",
      "src/main/frontend/definitions"
    ]
  },
  "include": [
    "src/main/application/**/*.ts"
//    "frontend/**/*.ts", "frontend/index.js"
  ],
  "exclude": []
}
